<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Interfaz_Admin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/color_fondo_interfaz_admin"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/boton_cerrar_sesion"
            style="@style/color_logos_interfaz_admin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icono_cerrar_sesion"
            android:background="@color/transparente"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/logo_app"
            style="@style/color_logos_interfaz_admin"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/samba_logo_secundario"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            style="@style/color_logos_interfaz_admin"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/logo_administrador"
            app:layout_constraintTop_toBottomOf="@id/logo_app"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        style="@style/texto_pantalla_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Opciones de Administrador"
        android:textSize="18dp"/>

    <View
        style="@style/linea_separatoria_editar_perfil"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp" />

    <Button
        style="@style/botones_modos"
        android:id="@+id/boton_a単adir_categoria"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="A単adir Categoria"/>

    <Button
        style="@style/botones_modos"
        android:id="@+id/boton_a単adir_producto"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="A単adir Producto"/>

    <Button
        style="@style/botones_modos"
        android:id="@+id/boton_perfil"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Editar Perfil"/>

    <Button
        style="@style/botones_modos"
        android:id="@+id/boton_listar_categorias"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mostrar Categorias"/>

    <Button
        style="@style/botones_modos"
        android:id="@+id/boton_listar_camisetas"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mostrar Camisetas"/>

</LinearLayout>