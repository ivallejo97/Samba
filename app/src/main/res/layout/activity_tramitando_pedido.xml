<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Tramitando_Pedido">


    <Button
        android:id="@+id/continuar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparente"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_app_claro_invertido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tramitando"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tramitando pedido"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/importe_total"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="Importe Total: "
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/tramitando"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/importe"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="125.99 € "
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tramitando"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/numero_productos"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="Numero de productos: "
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/importe_total"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/numero"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="3"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/importe"
        app:layout_constraintRight_toRightOf="parent"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/texto_tramitando_pedido"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Tramitando pedido..."
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintLeft_toLeftOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"/>

    <TextView
        android:id="@+id/datos_seguros"
        style="@style/color_texto_predeterminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Tus datos estan a salvo"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/texto_tramitando_pedido"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        style="@style/iconos_perfil"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icono_seguridad"
        app:layout_constraintTop_toTopOf="@id/datos_seguros"
        app:layout_constraintLeft_toRightOf="@id/datos_seguros"
        app:layout_constraintBottom_toBottomOf="@id/datos_seguros"/>

    <TextView
        android:id="@+id/descripcion_ley"
        style="@style/color_texto_predeterminado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Gracias a la ley de protección de patos personales y garantía de los derechos digitales (LOPDGDD), esta ley de protección de datos tiene como objetivo proteger los derechos fundamentales de las personas en relación a sus datos personales, estableciendo obligaciones para las empresas y organizaciones que tratan estos datos, y reconociendo una serie de derechos a los titulares de los mismos"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/datos_seguros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>