<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Acceso_Recuperar_Cuenta_3">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        style="@style/logo_app_style"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/edittext_recuperar_verificar_cuenta"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="Contraseña antigua"
        android:textSize="15dp"
        android:elevation="5dp"/>

    <EditText
        android:id="@+id/nueva_contraseña"
        android:layout_width="match_parent"
        style="@style/edittext_recuperar_verificar_cuenta"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="Nueva Contraseña"
        android:elevation="5dp"/>

    <EditText
        android:id="@+id/confirmar_nueva_contraseña"
        android:layout_width="match_parent"
        style="@style/edittext_recuperar_verificar_cuenta"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="Repite la contraseña"
        android:elevation="5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp">

        <ImageButton
            android:id="@+id/boton_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icono_flecha_izquierda"
            android:background="@android:color/transparent"
            style="@style/botones_continuar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/boton_confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/icono_aceptar"
            android:background="@android:color/transparent"
            style="@style/botones_continuar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>