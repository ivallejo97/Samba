        <item name="android:textColor">@color/verde_oscuro</item>
    </style>

    <style name="toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:background">@color/gris_oscuro</item>
    </style>

</resources>